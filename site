    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Mobile Menu
            const menuBtn = document.getElementById('menu-btn');
            const mobileMenu = document.getElementById('mobile-menu');
            menuBtn.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });

            // Nav link active state on scroll
            const sections = document.querySelectorAll('section');
            const navLinks = document.querySelectorAll('.nav-link');

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        navLinks.forEach(link => {
                            link.classList.remove('active');
                            if (link.getAttribute('href').substring(1) === entry.target.id) {
                                link.classList.add('active');
                            }
                        });
                    }
                });
            }, { rootMargin: '-30% 0px -70% 0px' });

            sections.forEach(section => {
                observer.observe(section);
            });

            // Market Chart
            const marketCtx = document.getElementById('marketChart').getContext('2d');
            new Chart(marketCtx, {
                type: 'bar',
                data: {
                    labels: ['Operacionais', 'Inoperantes'],
                    datasets: [{
                        label: 'Estaleiros na Grande Vit√≥ria',
                        data: [2, 1],
                        backgroundColor: ['rgba(43, 108, 176, 0.8)', 'rgba(160, 174, 192, 0.8)'],
                        borderColor: ['rgba(43, 108, 176, 1)', 'rgba(160, 174, 192, 1)'],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        title: { display: true, text: 'Disponibilidade de Estaleiros na Regi√£o' },
                        legend: { display: false }
                    },
                    scales: {
                        y: { beginAtZero: true, ticks: { stepSize: 1 } }
                    }
                }
            });

            // Investment Chart
            const investmentCtx = document.getElementById('investmentChart').getContext('2d');
            new Chart(investmentCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Entrada (2024)', 'Financiamento (36x)', 'Organiza√ß√£o Inicial'],
                    datasets: [{
                        label: 'Investimento',
                        data: [1250000, 2448000, 30000],
                        backgroundColor: [
                            'rgba(13, 47, 79, 0.9)', 
                            'rgba(43, 108, 176, 0.9)', 
                            'rgba(198, 159, 111, 0.9)'
                        ],
                        hoverOffset: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        title: { display: true, text: 'Composi√ß√£o do Investimento' },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.label || '';
                                    if (label) { label += ': '; }
                                    if (context.parsed !== null) {
                                        label += new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(context.parsed);
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });

            // Risks & Strategy
            const risks = [
                {
                    title: 'Risco Legal',
                    icon: '‚öñÔ∏è',
